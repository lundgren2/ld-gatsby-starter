{
  "extends": [
    "standard",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "standard",
    "react",
    "promise",
    "prettier",
    "html"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/prop-types": 0,
    "react/display-name": 0,
    "space-before-function-paren": 0,
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 120
      }
    ]
  },
  "env": {
    "browser": true
  },
  "globals": {
    "graphql": false
  }
}
